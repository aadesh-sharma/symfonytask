{% extends 'base.html.twig' %}

{% block title %} Create Post{% endblock %}

{% block body %}
    <h1>Create Post</h1>
    
    {{ form_start(postForm) }}
        <div class="form-group">
            {{ form_row(postForm.title) }}
        </div>
        <div class="form-group">
            {{ form_row(postForm.content) }}
        </div>

        {{ form_row(postForm.create, { 'label': 'Create' }) }}
    {{ form_end(postForm) }}
{% endblock %}